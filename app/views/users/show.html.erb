<h1 class="profile-title"><%= @profile.name %> Profile</h1>

<div class="profile row">
   <div class="col-md-6">
   <%= image_tag(@user.gravatar_url, class: "img-thumbnail img-large") %> <!--GRAVATAR IMAGE TAGE -->
  </div>
    
    <div class="col-md-6">
      <table class="table-striped">
        <tr>
          <td class="subject">City :</td> <td> <%= @profile.city %></td>
        </tr>
        <tr>
          <td class="subject">Country :</td><td ><%= @profile.country %></td>
        </tr>
        <tr>
          <td  class="subject">Description :</td> <td> <%= @profile.description %></td>
        </tr>
        <tr>
          <td  class="subject">Birthdate :</td>  <td > <%= @profile.birthdate.to_formatted_s(:long)[0..15] %></td>
        </tr>
      
      </table>
    </div>
</div>

 <% if current_user?(@user) %>
    <div>
      <hr>
      <%= link_to "Edit Profile", edit_user_registration_path%>
      <hr>
    </div>
 <% end %>

 <%= render '/shared/posts'%>