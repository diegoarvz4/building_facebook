 <%= form_for(:user, url: user_path(current_user),  method: :patch) do |f|%>
    
    <%= f.label :name %>
    <%= f.text_field :name,  :value => current_user.profile.name, class: 'form-control' %><br>
    
    <%= f.label :city %>
    <%= f.text_field :city,  :value => current_user.profile.city, class: 'form-control' %><br>

    <%= f.label :country %>
    <%= f.text_field :country, :value => current_user.profile.country, class: 'form-control' %><br>

    <%= f.label :description %>
    <%= f.text_field :description, :value => current_user.profile.description, class: 'form-control' %><br>

    <%= f.label :birthdate %>
    <%= f.date_field :birthdate, :value => current_user.profile.birthdate.to_s(:db)[0..9], class: 'form-control' %><br>

    <%= f.submit 'Submit', class: 'btn btn-info btn-block'%>
<% end %>

